doctype
html
    head
        link(rel="stylesheet", href="bower_components/normalize-css/normalize.css")
        link(rel="stylesheet", href="bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="css/main.css")
        link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Scada&subset=latin,cyrillic")


    body
        .player.container
            .player-head.row
                .buttons.col-xs-3
                    span.glyphicon.glyphicon-play
                    span.glyphicon.glyphicon-backward
                    span.glyphicon.glyphicon-forward
                
                .name.col-xs-8
                    |Семён Слепаков – Песня российского чиновника
                    
                .menu.col-xs-1
                    //span.glyphicon.glyphicon-volume-off
                    span.glyphicon.glyphicon-align-justify#list-toggle
            .seek.row
                .progress
                    .progress-bar(role="progressbar", aria-valuenow="60", aria-valuemin="0", aria-valuemax="100", style="width: 60%;")
                        span.sr-only
                            |60% Complete

            .row
                .player-list.container-fluid
                    - for (var x = 0; x < 3; x++)
                        .song.row
                            .play.col-xs-2
                                span.glyphicon.glyphicon-play
                                span.glyphicon.glyphicon-minus
                            .name.col-xs-10
                                a.author
                                    |Семён Слепаков
                                span
                                    |&nbsp- Песня российского чиновника

                    .song.row
                            .play.col-xs-2
                                span.glyphicon.glyphicon-play
                                span.glyphicon.glyphicon-minus
                            .name.col-xs-10
                                a.author
                                    |Avery Watts
                                span
                                    |&nbsp– Right Now(short ver)
                
        script(src="bower_components/jquery/dist/jquery.min.js")
        script(src="js/main.js")
